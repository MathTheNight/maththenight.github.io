<script type="text/javascript">
    // Add a script to automatically order the table by clear-a id alphabetically
    var table = document.getElementById("list-items");
    var tbody = table.getElementsByTagName("tbody")[0] || table.createTBody();
    var rows = tbody.getElementsByTagName("tr");
    var rowsArray = Array.from(rows);

    rowsArray.sort(function (a, b) {
        var contentA = a.querySelector("#clear-a").innerText.toLowerCase();
        var contentB = b.querySelector("#clear-a").innerText.toLowerCase();
        return contentA.localeCompare(contentB);
    });

    rowsArray.forEach(function (row) {
        tbody.appendChild(row);
    });
</script>
